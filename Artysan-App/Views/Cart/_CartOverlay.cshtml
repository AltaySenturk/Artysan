@model List<CartViewModel>

<div class="overlay" id="overlay"></div>
<div class="cart-menu" id="cartMenu">
    <button class="close-button" id="closeButton">Close</button>
    <div id="cartContent"> 
        <h2>Your Cart</h2>
        @if (Model != null && Model.Any())
        {
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EventName</td>
                            <td>@item.EventPrice.ToString("C")</td>
                            <td>@item.EventQuantity</td>
                            <td>@((item.EventPrice * item.EventQuantity).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2"><strong>Total</strong></td>
                        <td>@Model.Sum(i => i.EventQuantity)</td>
                        <td><strong>@Model.Sum(i => i.EventPrice * i.EventQuantity).ToString("C")</strong></td>
                    </tr>
                </tfoot>
            </table>
            <div class="cart-actions">
                <a href="#" class="btn continue-shopping">Continue Shopping</a>
                <a href="#" class="btn checkout">Checkout</a>
            </div>
        }
        else
        {
            <p>Your cart is empty.</p>
        }
    </div>

</div>
</div>
