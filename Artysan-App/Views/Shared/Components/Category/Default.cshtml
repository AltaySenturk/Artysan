@model List<CategoryViewModel>

<div class="dropdown-menu" aria-labelledby="navbarDropdown">

	<a class="dropdown-item" href="~/Article/Index">Tüm Blog Yazıları</a>
	<div class="dropdown-divider"></div>
	@foreach (var item in Model)
	{
		<a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-route-id="@item.Id">@item.CatName</a>
		<div class="dropdown-divider"></div>
	}
</div>