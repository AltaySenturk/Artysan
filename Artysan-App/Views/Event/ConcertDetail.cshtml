@model EventViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layoutfake.cshtml";
}


    <div class="row">
    @if (Model != null && Model.ImageUrl != null)
        {
            <div class="container">
                <div class="row align-items-center">
    
                    <!-- Etkinlik adını resmin üstüne yerleştir, rengini açık gri yap ve boyutunu 3px büyüt -->
                    <div class="col-12 text-center mb-0">
                        <h2 class="font-weight-bold"
                            style="background-color: whitesmoke; color: Black; margin-top: 0; margin-bottom: 0; font-size: calc(1.5em + 3px);">
                            @Model.Name</h2>
                    </div>
                    <!-- Resim ve bilgileri yan yana göster -->
                    <div class="col-md-4">
                        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="col-md-8 text-start">
                        <h5 class="mt-2">Bilgi:@Model.Description</h5>
                        <!-- Sanatçılar listesi burada olacak -->
                        <h5>Lokasyon:@Model.Location.Venue</h5>
        
                        <h5>Tarih:@Model.EventDate</h5>
                        <h5>Bilet Fiyatı: @Model.Ticket.Price₺</h5>

                    </div>
                    <div class="text-center">
                     <form asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id"asp-route-quantity="1"asp-route-ticket="@Model.TicketId"  method="get">
                     <button name="quantity" type="number" value="1" min="1" max="@Model.Stock"class="btn-primary" aria-label="Add to cart"></button></form>

                    </div>
                </div>
            </div>
        }
        else
        {
            <p>Üzgünüz, bu öğe şu anda mevcut değil.</p>
        }
    </div>
}
