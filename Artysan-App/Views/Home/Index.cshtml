<script>
    $(document).ready(function () {
        $('#searchForm').on('submit', function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.ajax({
                url: '@Url.Action("Index", "Event")',
                type: 'GET',
                data: formData,
                success: function (result) {
                    $('#searchResults').html(result);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
    });
</script>
