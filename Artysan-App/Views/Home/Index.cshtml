}
<form id="searchForm" method="get" action="@Url.Action("Index","Event")">
    <div class="form-row align-items-center " style="background-color: snow; justify-content:center; padding: 2%;">
        <div class="col-auto my-1">
            <label class="mr-sm-2" for="inlineFormCustomSelect">Kategori seçiniz</label>
            <select class="custom-select mr-sm-2" id="categorySelect" name="category">
                @await Component.InvokeAsync("Category")
            </select>
            <div class="col-auto my-1">
                <label class="mr-sm-2" for="inlineFormCustomSelect">Yer</label>
                <select class="custom-select" id="locationSelect" name="location">
                    @await Component.InvokeAsync("Location")
                </select>
                <div class="col-auto">
                    <div class="date-picker-title">
                        <label class="mr-sm-2" for="datepicker">Tarih</label>
                    </div>
                    <div class="date-picker-container">
                        <input type="date" class="form-control date-input" id="datepicker">
                        <span class="calendar-icon">📅</span>

                    </div>
                </div>

                <div class="col-auto my-1" style="display:flex">
                    <button type="submit" class="btn btn-primary" style="margin-top: 30px;">Submit</button>
                </div>
                <style>
                    .date-picker-container {
                        position: relative;
                        display: inline-block;
                    }

                    .date-input {
                        padding-right: 30px;
                    }

                    .calendar-icon {
                        position: absolute;
                        right: 15px;
                        top: 50%;
                        transform: translateY(-50%);
                        pointer-events: none;
                    }
                </style>
                <script>
                    $('#datepicker').datepicker({
                        uiLibrary: 'bootstrap5'
                    });
                </script>
            </div>
        </div>
</form>
